{
  "name": "@ixuxoinzo/xchain-sdk",
  "version": "2.0.0",
  "description": "multi-chain SDK for Ethereum + 13 L2 + Solana - complete with examples and documentation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm src/demo.ts",
    "start": "node dist/demo.js",
    "test": "node --loader ts-node/esm src/demo.ts",
    "demo": "npm run dev",
    "clean": "rm -rf dist",
    "docs": "npx typedoc src/index.ts --out docs",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "blockchain",
    "sdk",
    "ethereum",
    "solana",
    "multichain",
    "web3",
    "crypto",
    "defi",
    "nft",
    "wallet",
    "dapp",
    "smart-contracts"
  ],
  "author": "ixuxoinzo",
  "license": "MIT",
  "dependencies": {
    "@metaplex-foundation/js": "^0.19.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.0",
    "@types/node-fetch": "^2.6.13",
    "axios": "^1.6.0",
    "bs58": "^5.0.0",
    "dotenv": "^16.0.0",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ixuxoinzo/xchain-sdk.git"
  },
  "homepage": "https://github.com/ixuxoinzo/xchain-sdk#readme",
  "bugs": {
    "url": "https://github.com/ixuxoinzo/xchain-sdk/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
